{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "default_agent": "plan",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    },
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "grep *": "allow",
      "which *": "allow",
      "whoami *": "allow",
      "date *": "allow",
      "env *": "allow",
      "wc *": "allow",
      "file *": "allow",
      "stat *": "allow",
      "ps *": "allow",
      "ls *": "allow",
      "pwd *": "allow",
      "echo *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git branch *": "allow",
      "node --version*": "allow",
      "npm --version*": "allow",
      "npm list *": "allow",
      "python --version*": "allow",
      "python3 --version*": "allow",
      "pip --version*": "allow",
      "pip list *": "allow",
      "pip show *": "allow",
      "pip check *": "allow",
      "pip search *": "allow",
      "pip help *": "allow",
      "uv --version*": "allow",
      "uv pip list *": "allow",
      "uv pip show *": "allow",
      "uv tool list *": "allow",
      "uv python list *": "allow",
      "uv help *": "allow",
      "git push *": "ask"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    }
  }
}
