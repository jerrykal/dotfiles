{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "default_agent": "plan",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git push *": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "ls *": "allow",
      "pwd *": "allow",
      "rg *": "allow",
      "find *": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  }
}
